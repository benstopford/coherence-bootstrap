<!DOCTYPE cache-config SYSTEM "cache-config.dtd">


<cache-config>
<caching-scheme-mapping>

    <cache-mapping>
        <cache-name>*</cache-name>
        <scheme-name>simple</scheme-name>
    </cache-mapping>
</caching-scheme-mapping>

<caching-schemes>
    <!--
    distributed cache scheme
    -->

    <distributed-scheme>
        <scheme-name>simple</scheme-name>
        <service-name>simple-caching-for-invocables</service-name>
        <backing-map-scheme>
            <local-scheme/>
        </backing-map-scheme>
        <autostart>true</autostart>
    </distributed-scheme>


    <invocation-scheme>
        <service-name>MyInvocationService1</service-name>
        <thread-count>10</thread-count>
        <autostart>true</autostart>
    </invocation-scheme>
</caching-schemes>
</cache-config>