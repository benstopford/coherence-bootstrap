<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>
    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>break-me</cache-name>
            <scheme-name>forced-to-fail-via-Failing-Trigger</scheme-name>
        </cache-mapping>

        <cache-mapping>
            <cache-name>regular*</cache-name>
            <scheme-name>simple</scheme-name>
        </cache-mapping>

        <cache-mapping>
            <cache-name>foo</cache-name>
            <scheme-name>simple</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <!--
        distributed cache scheme
        -->
        <distributed-scheme>
            <scheme-name>forced-to-fail-via-Failing-Trigger</scheme-name>
            <service-name>unlimited-partitioned-pof</service-name>

            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme/>
                    </internal-cache-scheme>
                </read-write-backing-map-scheme>

            </backing-map-scheme>
            <serializer>
                <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                <init-params>
                    <init-param>
                        <param-type>string</param-type>
                        <param-value>my-pof-config.xml</param-value>
                    </init-param>
                </init-params>
            </serializer>
            <autostart>true</autostart>
            <listener>
                <class-scheme>
                    <class-factory-name>com.benstopford.coherence.bootstrap.structures.TriggerFactory</class-factory-name>
                    <method-name>createTriggerListener</method-name>
                    <init-params>
                        <init-param>
                            <param-type>string</param-type>
                            <param-value>{cache-name}</param-value>
                        </init-param>
                    </init-params>
                </class-scheme>
            </listener>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>simple</scheme-name>
            <service-name>unlimited-partitioned-pof</service-name>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <autostart>true</autostart>
            <serializer>
                <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                <init-params>
                    <init-param>
                        <param-type>string</param-type>
                        <param-value>my-pof-config.xml</param-value>
                    </init-param>
                </init-params>
            </serializer>
        </distributed-scheme>


        <invocation-scheme>
            <service-name>MyInvocationService1</service-name>
            <thread-count>10</thread-count>
            <autostart>true</autostart>
            <serializer>
                <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                <init-params>
                    <init-param>
                        <param-type>string</param-type>
                        <param-value>my-pof-config.xml</param-value>
                    </init-param>
                </init-params>
            </serializer>
        </invocation-scheme>
    </caching-schemes>
</cache-config>
