<?xml version="1.0"?>
<cache-config xmlns="http://schemas.tangosol.com/cache">

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>regionconnect</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <remote-cache-scheme>
            <scheme-name>regionconnect</scheme-name>
            <service-name>extend-service</service-name>
            <initiator-config>
                <tcp-initiator>
                    <remote-addresses>
                        <socket-address>
                            <address>localhost</address>
                            <port system-property="com.rbs.hpc.test.extend.port">32001</port>
                        </socket-address>
                    </remote-addresses>
                    <connect-timeout>20s</connect-timeout>
                </tcp-initiator>
            </initiator-config>
        </remote-cache-scheme>
    </caching-schemes>


</cache-config>
