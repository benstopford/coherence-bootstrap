<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>
    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>unlimited-partitioned</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <!--
        distributed cache scheme
        -->
        <distributed-scheme>
            <scheme-name>unlimited-partitioned</scheme-name>
            <service-name>unlimited-partitioned</service-name>

            <!-- unlimited capacity backing map cache -->
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>

            <autostart>true</autostart>
        </distributed-scheme>

        <!--
        proxy service scheme that allows the master site to replicate cached
        data to this site
        -->
        <proxy-scheme>
            <service-name>Region1ExtendViewerService</service-name>
            <acceptor-config>
                <tcp-acceptor>
                    <local-address>
                        <address>localhost</address>
                        <port system-property="com.rbs.hpc.test.extend.port">32001</port>
                    </local-address>
                </tcp-acceptor>
            </acceptor-config>
            <thread-count>4</thread-count>
            <autostart>true</autostart>
        </proxy-scheme>

        <invocation-scheme>
            <service-name>MyInvocationService</service-name>
            <thread-count>10</thread-count>
            <autostart>true</autostart>
        </invocation-scheme>

    </caching-schemes>
</cache-config>